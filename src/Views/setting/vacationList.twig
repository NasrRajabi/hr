{% extends "master.twig" %}


{% block style %}{% endblock %}


{% block main %}
{{ dd}}

	<main class="col ms-1">
		<div class="card">

			<div class="card-body">
				  <h5 class="card-title">قائمة الاجازات</h5>
					<br>
				<div class="table-responsive">
					<table class="table table-striped table-bordered  table-hover table-sm  align-middle" x-ref="dataTable">
						<thead>
							<tr>
								<th class="text-center fit">#</th>
								<th class="text-center fit">نوع الاجازة</th>
								<th class="text-center fit">نوع العقد</th>
								<th class="text-center fit">العمر من</th>
								<th class="text-center fit">العمر الى</th>		
								<th class="text-center fit">سنوات الخدمة من</th>
								<th class="text-center fit">سنوات الخدمة الى</th>																			
								<th class="text-center fit">ايام الاجازة</th>
								<th class="text-center fit">الرصيد المدور</th>
								<th class="text-center fit">سنوات الاجازة</th>
							</tr>
						</thead>
						<tbody class="table-group-divider">
							{% set counter = 1 %}
                            
							{% for vac in all %}
						
								<tr>
									<td class="text-center fit" >{{ counter }}</td>
									<td class="text-center fit" >{{ lookups.vacation_type[vac.vacation_type] }}</td>
                                    <td class="text-center fit" >{{ lookups.contract_type[vac.contract_type] }}</td>
                                    <td class="text-center fit" >{{ vac.from_age}}</td>
									<td class="text-center fit" >{{ vac.to_age}}</td>
									<td class="text-center fit" >{{ vac.from_service_years}}</td>
									<td class="text-center fit" >{{ vac.to_service_years}}</td>
									<td class="text-center fit" >{{ vac.vac_days}}</td>
									<td class="text-center fit" >{{ vac.max_move_days}}</td>
									<td class="text-center fit" >{{ vac.vac_years}}</td>
                                </tr>
								{% set counter = counter + 1 %}
                            {% endfor %}

						</tbody>
					</table>
				</div>
			</div>
		</div>
	
{% endblock %}
