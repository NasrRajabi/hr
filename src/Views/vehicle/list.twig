{% extends "master.twig" %}


{% block style %}

{% endblock %}

{% block main %}

		    <div class="row">
			    <div class="col-12 col-md-12 col-xxl-12 d-flex">
				    <div class="card flex-fill ">
					    <div class="card-body">	
							<h5 class="card-title">قائمة المركبات</h5>
							<br>
						    <div class="table-responsive">
                                <div class="m-4">
                                    <div class="accordion" id="myAccordion">
                                        <div class="accordion-item">
                                            <div class="card-body">
                                                <table class="table table-striped table-bordered  table-hover table-sm  align-middle" x-ref="dataTable">
                                                            <thead>
                                                                <tr>
                                                                    <th class="text-center fit">#</th>
                                                                    <th class="text-center fit">رقم المركبة</th>
                                                                    <th class="text-center fit"> اسم المركبة </th>
                                                                    <th class="text-center fit">نوع المركبة </th>
                                                                    <th class="text-center fit">رقم الشاصي</th>
                                                                    <th class="text-center fit">رقم المحرك</th>
                                                                    <th class="text-center fit">سعة المحرك</th>
                                                                    <th class="text-center fit">موديل المركبة</th>						
                                                                    <th class="text-center fit"> نوع الوقود</th>
                                                                    <th class="text-center fit"> نوع الجير</th>
                                                                    <th class="text-center fit"> لون المركبة</th>
                                                                    <th class="text-center fit">الاجراءات</th>	
                                                                </tr>
                                                            </thead>
                                                            {% set counter = 1 %}
                                                            <ol>
                                                                
                                                                {% for vehicle in data %}
                                                                
                                                                {% set vehicle_no = vehicle.vehicle_no  %}							
                                                                {% set vehicle_name = vehicle.vehicle_name  %}
                                                                {% set vehicle_type = vehicle.vehicle_type  %}	
                                                                {% set chassis_no = vehicle.chassis_no  %}				
                                                                {% set engine_no = vehicle.engine_no  %}				
                                                                {% set engine_capacity = vehicle.engine_capacity  %}				
                                                                {% set vehicle_model = vehicle.vehicle_model  %}				
                                                                {% set fuel_type = vehicle.fuel_type  %}				
                                                                {% set lime_type = vehicle.lime_type  %}				
                                                                {% set vehicle_color = vehicle.vehicle_color  %}				
                                                            <tr>
                                                                <td class="text-center fit" >{{counter}}</td>
                                                                <td class="text-center fit"  x-text="vehicle_no">{{vehicle_no}}</td>
                                                                <td class="text-center fit"  x-text="vehicle_name">{{vehicle_name}}</td>
                                                                <td class="text-center fit"  x-text="vehicle_type">{{vehicle_type}}</td>
                                                                <td class="text-center fit"  x-text="chassis_no">{{chassis_no}}</td>
                                                                <td class="text-center fit"  x-text="engine_no">{{engine_no}}</td>
                                                                <td class="text-center fit"  x-text="engine_capacity">{{engine_capacity}}</td>
                                                                <td class="text-center fit"  x-text="vehicle_model">{{vehicle_model}}</td>
                                                                <td class="text-center fit"  x-text="fuel_type">{{fuel_type}}</td>
                                                                <td class="text-center fit"  x-text="lime_type">{{lime_type}}</td>
                                                                <td class="text-center fit"  x-text="vehicle_color">{{vehicle_color}}</td>
                                                                <td class="text-center fit">
                                                                     <button  type="button" class="btn btn-outline-dark btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="تعديل مركبة">
                                                                        <a href="/vehicle/edit/{{vehicle.id}}" >
                                                                        <i class="bi bi-pencil-fill fs-5"></i></a>
                                                                    </button> 
                                                                </td>
                                                            </tr>
                                                            {% set counter = counter + 1 %}
									                    {% endfor %}
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                
                                    
                                </div>
                            </div>
						</div>
					</div>
				</div>
			</div>

{% endblock %}