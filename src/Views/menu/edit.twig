{% import "forms_helpers.twig" as forms %}
{% extends "master.twig" %}
{% block main %}
    <div class="row justify-content-md-center">
        <div class="row ">
            <div class="card">
                <div class="row justify-content-between  p-2 ">
                    <div class="col-md-6">
                        <h4 class="text-end me-3 mt-3">
                            تعديل القائمة  {{ menu.menu_name }}
                        </h4>
                    </div>
                    <div class="col-md-6">
                        <nav class="nav justify-content-end p-2">
                            <a type="button" class="btn btn-info ms-2" href="/menus">
                                <i class="bi bi-eye"></i>
                                عرض الكل
                            </a>
                        </nav>
                    </div>
                </div>
                <div class="card-body">
                    <form action="/menus/edit" method="post">
                        {{ csrf.fields | raw }}
                        <input type="hidden"  name="id" id="id" value="{{ menu.id }}">
                        <div class="col-6 mx-auto">
                            <div class="mb-3">
                                <label for="menu_name" class="form-label">اسم القائمة</label>
                                <input type="text" name="menu_name" id="menu_name" value="{{ old.menu_name is defined ? old.menu_name : menu.menu_name }}" class="form-control {{ errors.name ? 'is-invalid' : '' }}">
                                {% if errors.menu_name %}
                                    <div class="invalid-feedback">
                                        {{ errors.menu_name | first }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class=" col-6 mx-auto">
                            <div class="mb-3">
                                <label for="description" class="form-label">الوصف</label>
                                <input type="text"  name="description" id="description" value="{{ old.description is defined ? old.description : menu.description }}" class="form-control {{ errors.description ? 'is-invalid' : '' }}">
                                {% if errors.description %}
                                    <div class="invalid-feedback">
                                        {{ errors.description | first }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        <div class="d-grid gap-2 col-2 mx-auto m-5">
                            <button class="btn btn-primary" type="submit">حفظ</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
