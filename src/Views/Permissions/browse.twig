{% extends "master.twig" %}
{% block main %}
    {% if permissions['add_permission']  %}
        <td><a href='/permissions/add' class="text-success"><i class="bi bi-plus  fs-4 p-1"></i>أضف</a></td>
    {% endif  %}
    <div id="Table" class="d-none d-sm-none  d-md-block ">
        <div class="row justify-content-md-center">
            <div class="row ">
                <div class="card mtit-card">
                    <div class="card-body">
                        <table class="table table-responsive-md table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">المفتاح</th>
                                    <th scope="col">اسم الجدول</th>
                                    <th scope="col">الوصف</th>
                                    {% if permissions['edit_permission']  %}
                                        <th scope="col" style="width: 5%">تعديل</th>
                                    {% endif %}
                                    {% if permissions['delete_permission']  %}
                                        <th scope="col" style="width: 5%">حذف</th>
                                    {% endif %}
                                </tr>
                            </thead>
                            <tbody>
                                {% for permission in allPermissions %}
                                    <tr>
                                        <td>{{permission.key}}</td>
                                        <td>{{ permission.group_name}}</td>
                                        <td>{{ permission.description}}</td>
                                        {% if permissions['edit_permission']  %}
                                            <td><a href='/permissions/edit/{{permission.id}}' class="text-warning"><i class="bi bi-pencil fs-4 p-1"></i> </a></td>
                                        {% endif %}
                                        {% if permissions['delete_permission']  %}
                                            <td><a href='/permissions/delete/{{permission.id}}' class="text-danger"><i class="bi bi-trash  fs-4 p-1"></i> </a></td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}